<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand">Sparks Bank</a>

            </div>

            <ul class="nav navbar-nav navbar-right">
                <li><a asp-controller="Home" asp-action="Index"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                <li><a asp-controller="Home" asp-action="Customers"><span class="glyphicon glyphicon-transfer"></span> Customers & Transfer money</a></li>
                <li><a asp-controller="Home" asp-action="History"><span class="glyphicon glyphicon-modal-window"></span> Transfer History</a></li>
                <li><a asp-controller="Home" asp-action="ContactUs"><span class="glyphicon glyphicon-info-sign"></span> Contact Us </a></li>
            </ul>
        </div>
    </nav>
    
    <section class="container">
        <h2 class="text-center">@ViewBag.Title</h2>
        @RenderBody()
    </section>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", false)

</body>
</html>