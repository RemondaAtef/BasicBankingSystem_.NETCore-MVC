<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
</head>
<body>
    <div class="row">
        <header class="container-fluid">
            <nav class="navbar navbar-dark bg-dark navbar-expand-md">
                <h1 class="navbar-brand">Sparks Bank</h1>
                <button class="navbar-toggler" data-toggle="Collapse" data-target="#theMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="theMenu" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index"><span class="glyphicon glyphicon-home"></span>Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Customers"><span class="glyphicon glyphicon-transfer"></span> Customers & Transfer money</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="History"><span class="glyphicon glyphicon-modal-window"></span> Transfer History</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ContactUs"><span class="glyphicon glyphicon-info-sign"></span> Contact Us</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

