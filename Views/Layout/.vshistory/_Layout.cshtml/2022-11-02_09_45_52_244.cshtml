<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />

</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header" >
                <h1 class="navbar-brand">Sparks Bank</h1>

            </div>
            
            <ul class="nav navbar-nav navbar-right">
                <li><a asp-controller="Home" asp-action="Index"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                <li><a asp-controller="Home" asp-action="Customers"><span class="glyphicon glyphicon-transfer"></span> Customers & Transfer money</a></li>
                <li><a asp-controller="Home" asp-action="History"><span class="glyphicon glyphicon-modal-window"></span> Transfer History</a></li>
                <li><a asp-controller="Home" asp-action="AboutUs"><span class="glyphicon glyphicon-info-sign"></span> About Us </a></li>
            </ul>
        </div>
    </nav>

    @*<div class="container">
        <h3>Right Aligned Navbar</h3>
        <p>The .navbar-right class is used to right-align navigation bar buttons.</p>
    </div>*@
    <section class="content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </section>
</body>
</html>

